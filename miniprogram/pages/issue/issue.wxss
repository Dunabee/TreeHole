/* miniprogram/pages/issue/issue.wxss */
.textarea {
  display: block;
  resize: none;
  width: 100%;
  color: inherit;
}

.uploader-cell {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.uploader {
  float: left;
  position: relative;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 10%;
  box-sizing: border-box;
}

.uploader:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.uploader:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.uploader-item {
  float: left;
  position: relative;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  width: 180rpx;
  height: 180rpx;
}

.uploader-item-icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #fff;
  border-radius: 50%;
}

.uploader-item image {
  width: 100%;
  height: 100%;
  border-radius: 10%;
}